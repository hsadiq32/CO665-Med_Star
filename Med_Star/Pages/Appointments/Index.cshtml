@page
@model Med_Star.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Doctors Name
            </th>
            <th>
                Patients Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
                <td>
                    <a asp-page="./../Dcoctors/Details" asp-route-id="@item.Doctor.DoctorId">
                    Dr. @Html.DisplayFor(modelItem => item.Doctor.Person.FirstName) 
                    @Html.DisplayFor(modelItem => item.Doctor.Person.LastName)
                    </a>
                </td>
                <td>
                    <a asp-page="./../Patients/Details" asp-route-id="@item.Patient.PatientId">
                    @Html.DisplayFor(modelItem => item.Patient.Person.FirstName)
                    @Html.DisplayFor(modelItem => item.Patient.Person.LastName)
                    </a>
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AppointmentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>