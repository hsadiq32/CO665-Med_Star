@page
@model Med_Star.Pages.Branches.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Branch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Branch.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Branch.County)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.County)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Branch.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Branch.Postcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.Postcode)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Branch?.BranchId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Specialty
            </th>
            <th>
                Gender
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Branch.Doctors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Gender)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DoctorId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.DoctorId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.DoctorId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>